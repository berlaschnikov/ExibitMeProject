<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExibitMeProject.Views.Standholder.CreateQuestion">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout>
                <Label Text="Name:"/>
                <Entry x:Name="NameEntry"/>
                <Label Text="Question 1:"/>
                <Entry x:Name="Question1Entry"/>
                <Label Text="Question 2:"/>
                <Entry x:Name="Question2Entry"/>
                <Label Text="Question 3:"/>
                <Entry x:Name="Question3Entry"/>
            </StackLayout>
            <Button x:Name="CreateButton"
                Text="Create"
                    Clicked="CreateButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>