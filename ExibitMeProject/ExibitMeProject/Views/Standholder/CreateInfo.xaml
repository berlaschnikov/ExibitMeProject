<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExibitMeProject.Views.Standholder.CreateInfo"
             Title="Create Info">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout>
                <Frame BackgroundColor="Black">
                    <Label Text="Create Info"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                </Frame>
            </StackLayout>
            <StackLayout Margin="10">
                <Label Text="Name:"
                       FontSize="21"/>
                <Entry x:Name="NameEntry"
                       FontSize="21"/>
                <Label Text="Info Body:"
                       FontSize="21"/>
                <Entry x:Name="InfoBodyEntry"
                       FontSize="21"/>
            </StackLayout>
            
            <Button x:Name="CreateInfoButton" 
                    Text="Create Info" 
                    Margin="10"
                    FontSize="32"
                    VerticalOptions="FillAndExpand"
                    Clicked="CreateInfoButton_Clicked"/>
            
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>