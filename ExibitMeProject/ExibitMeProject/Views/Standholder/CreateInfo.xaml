<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExibitMeProject.Views.Standholder.CreateInfo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout>
                <Label Text="Name:"/>
                <Entry x:Name="NameEntry"/>
                <Label Text="Info Body:"/>
                <Entry x:Name="InfoBodyEntry"/>
            </StackLayout>
            <Button x:Name="CreateInfoButton" 
                    Text="Create Info" 
                    Clicked="CreateInfoButton_Clicked"/>
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>