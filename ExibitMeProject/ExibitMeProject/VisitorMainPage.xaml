<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExibitMeProject.VisitorMainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image/>
            <Entry x:Name="TestEntry"/>
            <Button x:Name="TestButton"
                    Text="Test"
                    Clicked="TestButton_Clicked"/>
            <Button Text="History" Clicked="HistoryButton_Clicked"
            <Button x:Name="GenerateQrCodeFullButton"
                    Text="Generate QrCode Full"
                    Clicked="GenerateQrCodeFullButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>